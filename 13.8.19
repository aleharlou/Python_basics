tickets = int(input("Сколько билетов Вы хотите приобрести? "))
price = 0
for i in range(tickets):
    i += 1
    print ("Введите возраст посетителя для билета", i)
    age = int(input())
    if age < 18:
        print("Билет бесплатный")
    elif 18 <= age < 25:
        price += 990
        print("Стоимость билета 990 руб")
    else:
        price += 1390
        print("Стоимость билета 1390 руб")
if tickets > 3: # если больше трёх человек - 10% скидка на общую стоимость заказа
    price = price * 0.9
    print("Общая стоимость", i, "билетов, включая 10% скидку,", price, "руб")
else:
    print("Общая стоимость", i, "билетов", price, "руб")
